//to find smallest and largest number in the array
public class smallestAndLargest {
	public static void main(String args[]){
		int a[]={5,1,3,4,2,8,7,6},small,large;
		for(int i=0;i<a.length-1;i++)    
		   System.out.print(a[i]+" ");
		small=a[0];
		large=a[a.length-1];
		for(int i=1;i<8;i++){
			if(a[i]<small)
				small=a[i];
			if(a[i]>large)
				large=a[i];
		}		
		System.out.println("\nLargest: "+large+" \nSmallest: "+small);
	}

}
