//first repeating element in an array
public class firstElementRepeating {
	public static void main(String args[]){
		int a[]={1,2,3,1,4,5,2,6},index=0,flag=0,rep=0;
		for(int i=0;i<8;i++)
		    System.out.print(a[i]+" ");
  outer:for(int i=0;i<8;i++)
			for(int j=0;j<8;j++)
			{
				if(a[i]==a[j+1])
				{
					rep=a[i];
					flag++;
					index=j+1;
				}
				if(flag!=0)
					break outer;
			}
		System.out.println("\nThe first element to repeat is "+rep+" at position "+(index+1));
	}
}
